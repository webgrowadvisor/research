<script>
   
    $('#editModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget); 
        var id = button.data('id'); 
        var responsible = button.data('responsible');
        var managed_by = button.data('managed_by');
        var experience = button.data('experience');
        var description = button.data('description');
        // var strategies = button.data('strategies').split(','); 

        var modal = $(this);
        modal.find('#recordId').val(id);
        modal.find('#modalResponsible').val(responsible);
        modal.find('#modalManagedBy').val(managed_by);
        modal.find('#modalExperience').val(experience);
        modal.find('#modalDescription').val(description);

        // Set checkboxes based on strategies
        // modal.find('input[name="strategies[]"]').each(function() {
        //     $(this).prop('checked', strategies.includes($(this).val()));
        // });
    });
</script>
